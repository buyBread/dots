# |\  \|\_____  \    
# \ \  \|____|\ /_   
#  \ \  \    \|\  \  
#   \ \  \  __\_\  \ 
#    \ \__\|\_______\
#     \|__|\|_______|

# wm

set $mod Mod1
floating_modifier $mod
font pango: tewi


# binds

# focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# splits
bindsym $mod+h split h
bindsym $mod+v split v

# layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# exit
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'exit' -b 'yes' 'i3-msg exit'"

# resize
mode "resize" {
        bindsym Left resize shrink width 1 px
        bindsym Down resize grow height 1 px
        bindsym Up resize shrink height 1 px
        bindsym Right resize grow width 1 px
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# media
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# other
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+q kill
bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec bash ~/draw_term
bindsym Print exec scrot -q 100
bindsym $mod+d exec dmenu_run -l 8 -fn cherry -nb black -sb gray -sf black
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart


# workspaces

set $w1 "O # # # #"
set $w2 "# O # # #"
set $w3 "# # O # #"
set $w4 "# # # O #"
set $w5 "# # # # O"

# goto
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5

# move to
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5


# colors

# active
set $activeBorder     "#cccccc"
set $active           "#cccccc"
set $activeText       "#0a090a"

# inactive
set $inactiveBorder   "#4d4d4d"
set $inactive         "#4d4d4d"
set $inactiveText     "#282428"

# class           border            background   text            indicator   child_border
client.focused    $activeBorder     $active      $activeText     $active     $active
client.unfocused  $inactiveBorder   $inactive    $inactiveText   $inactive   $inactive


# misc

exec xrdb .Xresources
exec feh --bg-fill ~/notwall.png
# exec tint2 -c /home/buybread/.config/tint2/i3
for_window [class=".*"] border none
for_window [class="URxvt"] border pixel 4


# gaps

gaps inner 45
gaps outer 65 

# no gaps when only one window is open
smart_gaps on

# gap controls
bindsym $mod+minus        gaps inner all minus 5
bindsym $mod+plus         gaps inner all plus  5
bindsym $mod+Shift+minus  gaps outer all minus 5
bindsym $mod+Shift+plus   gaps outer all plus  5