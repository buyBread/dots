[bar/base]
	dpi      = 192
	width    = 100%
	height   = 18
	offset-x = 0
	offset-y = 0

	background = ${colors.bar_bg}
	foreground = ${colors.bar_fg}

	border-top-size     = 5
	border-bottom-size  = 5
	border-top-color    = ${colors.bar_bg}
	border-bottom-color = ${colors.bar_bg}

	spacing            = 0
	padding-left       = 2
	padding-right      = 1
	module-margin-left = 2

	font-N = <fontconfig pattern>;<vertical offset>
	font-0 = WunconSiji:size                        = 4;2
	font-1 = scientifica:pixelsize                  = 10;2
	font-2 = scientifica:pixelsize                  = 10;2

	modules-left   = workspaces music
	modules-center = xwindow
	modules-right  = essid volume battery date

	fixed-center = true

;--------------------------------------------
; modules                                   ;
;--------------------------------------------

[module/network]
	type          = internal/network
	interface     = wlo1
	ping-interval = 3

[module/xwindow]
	y-offset      = 10
	type          = internal/xwindow
	format        = <label>
	label         = %title:0:50:%
	label-padding = 1

[module/date]
	type     = internal/date
	interval = 1.0
	date     =
	date-alt =  [ %a %d, %b |
	time     = "%a %I:%M %p "
	time-alt = %H:%M:%S %p ]
	label    = %date% %time%

	format         = <label>
	format-padding = 0

	format-prefix            = 
	format-prefix-background = ${colors.time_p_bg}
	format-prefix-foreground = ${colors.modules_prefix_fg}
	format-prefix-padding    = 1

	label-background = ${colors.modules_bg}
	label-foreground = ${colors.modules_fg}
	label-padding    = 0

[module/music]
	type = internal/mpd

	host = 127.0.0.1
	port = 7755

	interval = 2

	format-online = <icon-prev><label-song>

	label-song         = %title%
	label-song-padding = 1

	label                 = "%output:0:45:...%"
	label-song-background = ${colors.modules_bg}
	label-song-foreground = ${colors.modules_fg}
	label-padding-right   = 1

	icon-prev            = 
	icon-prev-background = ${xrdb:color12}
	icon-prev-foreground = ${colors.modules_prefix_fg}
	icon-prev-padding    = 1

	format-online-prefix-padding = 1

	click-left   = playerctl previous
	click-middle = playerctl play-pause
	click-right  = playerctl next

[module/battery]
